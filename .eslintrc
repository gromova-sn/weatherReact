{
    "parser": "babel-eslint",
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "experimentalObjectRestSpread": true
        }
    },
    "rules": {
        "max-len": [
          1,
          {"code": 140}
        ],
        "indent": [
            1,
            4,
            {"SwitchCase": 1}
        ],
        "eol-last" : [1],
        "no-multiple-empty-lines": [
            1,
            {
                "max": 2,
                "maxEOF": 1
            }
        ],
        "no-trailing-spaces": [
            1,
            {
                "skipBlankLines": false
            }
        ],
        "quotes": [
            1,
            "double"
        ],
        "linebreak-style": [
            1,
            "unix"
        ],
        "no-undef": [
            1
        ],
        "no-case-declarations": [
            0
        ],
        "no-debugger": [
            1
        ],
        "no-unused-vars": [
            1
        ],
        "no-console": [
            0
        ],
        "react/react-in-jsx-scope": 2,
        "react/prop-types": 2,
        "react/jsx-no-undef": [
            1
        ],
        "react/jsx-uses-react": 1,
        "react/jsx-uses-vars": 1,
        "react/display-name": 1
    },
    "plugins": [
        "react"
    ]
}
